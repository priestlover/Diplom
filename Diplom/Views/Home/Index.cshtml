                            </div>
                            <div class="card-body">
                                <a href="/bebra" class="text-decoration-none text-black">
                                    <h2 class="card-title"> @Model[1 + i * 4].Name</h2>
                                </a>
                                <h4 class="card-text">@Model[1 + i * 4].Price ₽</h4>
                            </div>
                        </div>

                        <div class="card">
                            <div class="text-center" style="height:70%">
                                <a href="/bebra">
                                    <img src="@Model[2 + i * 4].ImgSource" class="card-img-top rounded mycard" alt="...">
                                </a>
                            </div>
